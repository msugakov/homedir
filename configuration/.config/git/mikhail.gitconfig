[core]
	pager = less --quit-if-one-screen --RAW-CONTROL-CHARS --no-init

[alias]
	pushup = push --set-upstream origin
	please = push --force-with-lease
	lg = log --graph --pretty=format:'%Cred%h%Creset - %Cblue<%an>%Creset %C(yellow)%d%Creset %s %Cgreen(%cd)' --abbrev-commit --date=human
	go = rebase --continue
	amen = commit --amend
	co = checkout
	last = diff HEAD~ HEAD
	redo = rebase --edit-todo
	cofi = commit --fixup
